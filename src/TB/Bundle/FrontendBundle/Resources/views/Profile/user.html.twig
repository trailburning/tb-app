{% extends '::base.html.twig' %}

{% block title %}{{ user.title }}{% endblock %}

{% block stylesheets %}
<link href="{{ asset('assets/css/common_cards.css') }}" rel="stylesheet" type="text/css">
<link href="{{ asset('assets/css/user.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block body %}
<script>
var TB_APP = 'UserApp';
{% if app.user %}		
var TB_USER_ID = {{ app.user.id }};
{% endif %}
{% if user.location %}
var TB_USER_LONG = {{ user.location.longitude }};
var TB_USER_LAT = {{ user.location.latitude }};
{% endif %}
</script>

{{ include('TBFrontendBundle:Profile:_userHeader.html.twig', [user]) }}

<div class="panel_content">
	<div class="crumb_content fixed_content">
	  <div id="bigbar">
        {{ include('TBFrontendBundle:Default:breadcrumb.html.twig', breadcrumb) }}

        {{ include('TBFrontendBundle:Default:share.html.twig') }}

		{% if app.user %}
			{% if app.user.id != user.id %}
				<div class="follow"><a href="javascript:void(0)" class="btn btn-tb-action btn-tb like_btn{% if user_is_following(app.user, user) %} pressed-btn-tb{% endif %}" data-off="Follow" data-on="Following" data-firstname="{{ user.firstname}}" data-userid="{{ user.id}}"><i class="icon-star icon-white"></i> <span class="btn-label">{% if user_is_following(app.user, user) %}Following{% else %}Follow{% endif %} {{ user.firstname}}</span></a></div>
			{% endif %}
		{% else %}
			<div class="follow"><a href="{{ path('fos_user_security_login') }}" class="btn btn-tb-action btn-tb like_btn" data-off="Follow" data-on="Following" data-firstname="{{ user.firstname}}" data-userid="{{ user.id}}"><i class="icon-star icon-white"></i> <span class="btn-label">Follow {{ user.firstname}}</span></a></div>
		{% endif %}
      </div>
    </div>
                        
    <div class="panels clearfix">               	
    	<div class="mytrails_title_content fixed_content">    		
      	  <h2 class="tb tb-title">My Trails</h2>
    	</div>

    	<div class="mytrails_content fixed_content">    		
          {% if routes %}
	  		<div class="panels clearfix">
			  {% for route in routes %}
	   	      <div class="panel trail_card trail_card_panel">
		        <div class="title"><h3 class="tb">{{ route.category.name}}</h3></div>
	            <a href="{{ path('trail', {'trailSlug': route.slug}) }}">
	            <div class="photo tb-photo-btn">
	              <div class="image_container">
                     {% if route.media is defined %}
                       <img src="http://app.resrc.it/O=80/http://s3-eu-west-1.amazonaws.com/{{ route.media.versions[0].path }}" class="resrc scale" border="0"/>
                     {% else %}
                        <img src="http://app.resrc.it/s=w260,pd1/o=80/http://s3-eu-west-1.amazonaws.com/trailburning-assets/images/default/example_trailcard.jpg" class="resrc scale" border="0"/>
                     {% endif %}
                  </div>
		          <div class="card_title">
					<h1>{{ route.name}}</h1>
					<br/>
					<h1>{{ route.region }}</h1>
		          </div>
	            </div>
	          	</a>
		      	<div class="summary">
		          <div class="tb-avatar"><div class="photo"><a href="{{ path('profile', {'name': user.name}) }}">		          	
            	  {% if user.avatar %}
                	<img src="https://s3-eu-west-1.amazonaws.com/trailburning-assets/images/profile/{{ user.name }}/avatar.jpg">
            	  {% elseif user.avatarGravatar %}
                	<img src="{{ user.avatarGravatar }}">
            	  {% else %}
                	<img src="{{ asset('assets/img/avatar_man.jpg') }}">
            	  {% endif %}
		          </a></div></div>
		          <div class="detail">
		            by <strong>{{ user.firstName }} {{ user.lastName }}</strong>
		            <div class="stars">
		              <div class="star_full"></div>
		              <div class="star_full"></div>
		              <div class="star_full"></div>
		              <div class="star_half"></div>
		              <div class="star"></div>
		            </div>
		          </div>
		        </div>
	          </div>
			  {% endfor %}
	        </div>	      
		{% endif %}
    	</div>

    	<div class="details_content fixed_content clearfix">
			<div class="panel profile_detail_panel">
			  <div class="content">
				<div class="title">About Me</div>
		        <h1>{{ user.synopsis }}</h1>
			  </div>
			</div>
    	
			{{ include('TBFrontendBundle:Profile:_follow.html.twig', [user]) }}
            
    	</div>

	    {% if user.id == 2 %}
    	<div class="likedtrails_content">
  		  <div class="fixed_content">
      		<h2 class="tb">Trails I Like</h2>
      		<div class="desc"><h4 class="tb">Discover my favourite Trails from the Trailburning Community</h4></div>      
		  	<div class="panels">  	
			  <div class="trail_card_sticker">
				<div class="panel trail_card trail_card_panel">
				  <div class="title"><h3 class="tb">Mountains</h3></div>
			      <a href="../trail/chamonix">
			      <div class="photo tb-photo-btn">
			        <div class="image_container"><img src="http://app.resrc.it/o=80/http://s3-eu-west-1.amazonaws.com/trailburning-media/351f5fcad0817a6a2315ec7daaddbf6097c3c54e.jpg" class="resrc scale" border="0"/></div>
