{% extends '::base.html.twig' %}

{% block title %}Discover Trails{% endblock %}

{% block stylesheets %}
<link href="{{ asset('assets/css/trails.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block body %}
<script>
var TB_APP = 'TrailsApp';
{% if app.user %}		
var TB_USER_ID = {{ app.user.id }};
{% endif %}
</script>

  <div class="trails_content">
  	<div class="content">
  		
      <h2 class="tb tb-title">Discover Trails</h2>
      <div class="desc"><h4 class="tb">Discover the latest trails from the Trailburning community</h4></div>      

	  <div class="panels trailcards clearfix">
	  	<div id="trailCards"></div>
	  </div>
	  <div class="nav">       
	    <div class="more_btn"><a href="javascript:void(0)" class="btn btn-tb btn-tb-small">More Trails</a></div>	  
	    <div class="tb-loader"><div class="spinner"></div><div class="middle">...</div></div>
	  </div>	    		
  	</div>
  </div>

{% endblock %}


{% block javascripts %}

<script type="text/template" id="trailsTrailCardViewTemplate">
    <div class="title"><h3 class="tb"><%= category.name %></h3></div>
    <a href="trail/<%= slug %>">
    <div class="photo tb-photo-btn">
      <div class="image_container fade_on_load"><img data-src="http://app.resrc.it/O=80/http://s3-eu-west-1.amazonaws.com/<%= versionLargePath %>" class="resrc scale" border="0"/></div>
      <div class="card_title">
        <h1><%= name %></h1>
        <br/>
        <h1><%= region %></h1>
      </div>
    </div>
    </a>
    <div class="summary">
      <div class="tb-avatar"><div class="photo"><a href="profile/<%= user.name %>"><img src="<%= user.avatar %>"></a></div></div>
      <div class="detail">
        by <strong><%= user.title %></strong>
        <div class="stars">
          <div class="star"></div>
          <div class="star"></div>
          <div class="star"></div>
          <div class="star"></div>
          <div class="star"></div>
        </div>
      </div>
    </div>
</script>

<script type="text/template" id="trailsTrailEventCardViewTemplate">
    <div class="title"><h3 class="tb"><%= category.name %></h3></div>
    <a href="trail/<%= slug %>">
    <div class="photo tb-photo-btn">
      <div class="image_container fade_on_load"><img data-src="http://app.resrc.it/O=80/http://s3-eu-west-1.amazonaws.com/<%= versionLargePath %>" class="resrc scale" border="0"/></div>
      <div class="card_title">
        <h1><%= name %></h1>
        <br/>
        <h1><%= region %></h1>
      </div>
    </div>
    </a>
    <div class="summary">
      <div class="sponsor"><a href="events/<%= eventURL %>"><img src="http://s3-eu-west-1.amazonaws.com/trailburning-assets/images/events/<%= eventURL %>/card_trail_logo.png"></a></div>
    </div>
</script>

{% endblock %}