				    <div class="detail">
				    by <strong>Reuben Tabner</strong>
				    <div class="stars">
				      <div class="star_full"></div>
				      <div class="star_full"></div>
				      <div class="star_full"></div>
				      <div class="star_half"></div>
				      <div class="star"></div>
				    </div>
				    </div>
			      </div> 
			 	</div>						 	
			  </div><!--  	
		   --><div class="trail_card_sticker">
				  <div class="panel trail_card trail_card_panel">
			        <div class="title"><h3 class="tb">Bush</h3></div>
			        <a href="../trail/yurrebilla">
			        <div class="photo tb-photo-btn">
			          <div class="image_container"><img src="http://app.resrc.it/o=80/http://s3-eu-west-1.amazonaws.com/trailburning-media/72f5660f673dd97f92ed8c2b7ab1d4fc998632e5.jpg" class="resrc scale" border="0"/></div>
			          <div class="card_title">
			            <h1>Yurrebilla</h1>
			            <br/>
			            <h1>South Australia</h1>
			          </div>
			        </div>
			        </a>
			        <div class="summary">
			          <div class="tb-avatar"><div class="photo"><a href="../profile/paultran"><img src="https://s3-eu-west-1.amazonaws.com/trailburning-assets/images/profile/paultran/avatar.jpg"></a></div></div>
			          <div class="detail">
			            by <strong>Paul Tran</strong>
			            <div class="stars">
			              <div class="star_full"></div>
			              <div class="star_full"></div>
			              <div class="star_full"></div>
			              <div class="star_full"></div>
			              <div class="star"></div>
			            </div>
			          </div>
			        </div>
			      </div>
			  </div><!--
		   --><div class="trail_card_sticker">
			   	  <div class="panel trail_card trail_card_panel">
			        <div class="title"><h3 class="tb">Park</h3></div>
			        <a href="../trail/volkspark">
			        <div class="photo tb-photo-btn">
			          <div class="image_container"><img src="http://app.resrc.it/O=80/http://s3-eu-west-1.amazonaws.com/trailburning-media/367ebcf2a55a711e258a909c9606cdf8f172fb69.jpg" class="resrc scale" border="0"/></div>
			          <div class="card_title">
			            <h1>Volkspark</h1>
			            <br/>
			            <h1>Friedrichshain</h1>
			            <br/>
			            <h1>Berlin</h1>
			          </div>
			        </div>
			        </a>
			        <div class="summary">
			          <div class="tb-avatar"><div class="photo"><a href="../profile/mattallbeury"><img src="https://s3-eu-west-1.amazonaws.com/trailburning-assets/images/profile/mattallbeury/avatar.jpg"></a></div></div>
			          <div class="detail">
			            by <strong>Matt Allbeury</strong>
			            <div class="stars">
			              <div class="star_full"></div>
			              <div class="star_full"></div>
			              <div class="star_full"></div>
			              <div class="star_half"></div>
			              <div class="star"></div>
			            </div>
			          </div>
			        </div>
			      </div>        
			  </div>	   	
		  	</div>
		  </div>    		
    	</div>
		{% endif %}    	
    	
