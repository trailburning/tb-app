<div class="panel profile_follow_panel">
    <div class="content">
        <div class="you_follow">
            <div class="title">
                {% if app.user and app.user.id == user.id  %}
                    You follow them
                {% else %}
                    I follow them
                {% endif %}
            </div>	
            {% if user.iFollow|length > 0 %}
                <div class="avatars">
                    {% for user in user.iFollow %}
                        {{ include('TBFrontendBundle:Profile:_userAvatar.html.twig', [user]) }}
                    {% endfor %}
                </div>
            {% else %}
                &nbsp;
            {% endif %}
        </div>
        <div class="they_follow">
            <div class="title">
                {% if app.user and app.user.id == user.id  %}
                    They follow you
                {% else %}
                    They follow me
                {% endif %}
            </div>	
            {% if user.myFollower|length > 0 %}
                <div class="avatars">
                    {% for user in user.myFollower %}
                        {{ include('TBFrontendBundle:Profile:_userAvatar.html.twig', [user]) }}
                    {% endfor %}
                </div>
            {% else %}
                &nbsp;
            {% endif %}
        </div>     
    </div>
</div>
