<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta property="og:title" content="{% block og_title %}Trailburning{% endblock %}"/>
        <meta property="og:url" content="{% block og_url %}http://beta.trailburning.com{% endblock %}"/>
        <meta property="og:image" content="{% block og_image %}http://beta.trailburning.com{% endblock %}"/>
        <title>{% block title %}Trailburning{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link href="http://fonts.googleapis.com/css?family=Signika:400,300,700" rel="stylesheet">
        <link href="http://api.tiles.mapbox.com/mapbox.js/v1.3.1/mapbox.css" rel="stylesheet">
        <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('assets/css/bootstrap-responsive.min.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/common_ui.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('assets/css/main.css') }}" rel="stylesheet" type="text/css">
        {% block stylesheets %}{% endblock %}
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
            ga('create', 'UA-45211566-1', 'trailburning.com');
            ga('send', 'pageview');
        </script>
    </head>
    <body>
        <div id="appview">      
            <div id="headerview">
                <div class="left">
                    <a href=""><img src="{{ asset('assets/img/header/tb_logo.gif') }}" border="0"></a>
                </div>    
                <div class="right">
                    <div class="signin"><a href="" class="btn btn-tb-action btn-tb-large">Join</a></div>
                    <div class="links">
                        <div class="link"><a href="">Discover Trailburning</a></div>        
                    </div>
                    <div class="discover">
                        <form id="search_form">
                            <input type="text" id="search_field" name="discover">
                            <input type="submit" class="search-btn">        
                        </form>
                    </div>
                </div>
                <div class="trans-line"></div>        
                </div>    
            </div>    

            {% block body %}{% endblock %}

            <div id="footerview">
                <div class="left">
                  <div class="copyright">Copyright Â© 2013, Augmented Media Projects Ltd</div>    
                  <div class="links">
                    <div class="link"><a href="">About</a></div>
                    <div class="link"><a href="">Press Kit</a></div>
                  </div>
                </div>
                <div class="right">
                    <div class="social email"><a href="mailto:hello@trailburning.com" class="button btnEmail">Email</a></div>
                    <div class="social facebook"><a href="http://www.facebook.com/trailburning" target="_blank" class="button btnFacebook">Facebook</a></div>
                    <div class="social twitter"><a href="http://www.twitter.com/trailburning" target="_blank" class="button btnTwitter">Twitter</a></div>
                    <div class="social googleplus"><a href="https://plus.google.com/+Trailburning/posts" target="_blank" class="button btnGooglePlus">Google+</a></div>          
                    <div class="social pinterest"><a href="https://www.pinterest.com/trailburning/" target="_blank" class="button btnPinterest">Pinterest</a></div>          
                </div>
            </div>     
        </div>      

        {% block javascripts %}{% endblock %}

        <script src="{{ asset('assets/js/libs/jquery-1.8.3.min.js') }}"></script>
        <script src="{{ asset('assets/js/libs/bootstrap.min.js') }}"></script>
        <script src="{{ asset('assets/js/libs/bootstrap-filestyle.min.js') }}"> </script>

        <script src='http://api.tiles.mapbox.com/mapbox.js/v1.3.1/mapbox.js'></script>
        <!--[if lte IE 8]>
          <link href='http://api.tiles.mapbox.com/mapbox.js/v1.3.1/mapbox.ie.css' rel='stylesheet' >
        <![endif]-->

        <script src="{{ asset('assets/js/libs/imagesloaded.pkgd.min.js') }}"></script>
        <script src="{{ asset('assets/js/libs/image-scale.min.js') }}"></script>

        <script src="{{ asset('assets/js/libs/jquery.ui.widget.js') }}"></script>
        <script src="{{ asset('assets/js/libs/jquery.iframe-transport.js') }}"></script>
        <script src="{{ asset('assets/js/libs/jquery.fileupload.js') }}"></script>

        <script data-main="{{ asset('assets/js/main') }}" src="{{ asset('assets/js/libs/require.js') }}"></script>

        <script>
        resrc = {
          options: {
            server: "app.resrc.it",
            resrcOnLoad: true,
            resrcOnResize: true,
            resrcOnPinch: false    
          }
        };
        </script>
        <script src="//use.resrc.it"></script>
    </body>
</html>
