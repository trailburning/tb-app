<div class="trail_card_sticker">
	<div class="panel trail_card_panel">
		<div class="title"><h3 class="tb">{{ route.routeCategory.name }}</h3></div>
        <a href="{{ path('editorial_trail', {trailSlug: route.slug, editorialSlug: editorial.slug}) }}">
        <div class="photo tb-photo-btn">
        	<div class="image_container"><img src="http://app.resrc.it/o=80/{{ route.favouriteMedia.absolutePath }}" class="resrc scale" border="0"/></div>
          	<div class="card_title">
            <h1>{{ route.shortName ? route.shortName : route.name }}</h1>
            <br />
            <h1>{{ route.region }}</h1>
        	</div>
       	</div>
        </a>
        <div class="summary">
        {% if route.eventRoutes and route.eventRoutes|length() > 0 %}
	        <div class="sponsor"><a href="{{ path('event', {slug: route.eventRoutes[0].event.slug}) }}"><img src="http://s3-eu-west-1.amazonaws.com/trailburning-assets/images/events/{{ route.eventRoutes[0].event.slug }}/card_trail_logo.png"></a></div>	       		
        {% elseif route.user and route.user.name != 'admin'  %}
       		<div class="tb-avatar"><div class="photo"><a href="{{ path('profile', {'name': route.user.name}) }}">		          	
    	  	{% if route.user.avatar %}
        		<img src="https://s3-eu-west-1.amazonaws.com/trailburning-assets/images/profile/{{ route.user.name }}/avatar.jpg">
    	  	{% elseif route.user.avatarGravatar %}
        		<img src="{{ route.user.avatarGravatar }}">
    	  	{% else %}
        		<img src="{{ asset('assets/img/avatar_man.jpg') }}">
    	  	{% endif %}
          	</a></div></div>
	        <div class="detail">
	            by <strong>{{ route.user.title }}</strong>
	            <div class="stars">
	            	<div class="star"></div>
	              	<div class="star"></div>
	              	<div class="star"></div>
	              	<div class="star"></div>
	              	<div class="star"></div>
	           	</div>
	      	</div>
        {% endif %}
        </div>
 	</div>						 	
</div> 