{% extends "::base.html.twig" %}

{% block title %}Trailburning Ambassadors{% endblock %}

{% block stylesheets %}
<link href="{{ asset('assets/css/static.css') }}" rel="stylesheet" type="text/css">
<link href="{{ asset('assets/css/ambassadors.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block body %}
<script>
var TB_APP = 'BaseApp';
{% if app.user %}		
var TB_USER_ID = {{ app.user.id }};
{% endif %}
</script>

  <div id="def_header">  	  	
	  <div id="hero_images">  	
	    <div class="hero_image">
	      <div class="background">
      		<div class="image_container fade_on_load"><img data-src="http://app.resrc.it/O=80/http://assets.trailburning.com/images/ambassadors/bc854792692e31762a587a9c56921d87db5f2a2a.jpg" class="resrc scale" /></div>
		  </div>
	  	</div>
	  	
	    <div class="hero_image">
	      <div class="background">
      		<div class="image_container fade_on_load"><img data-src="http://app.resrc.it/O=80/http://assets.trailburning.com/images/ambassadors/PB010723.jpg" class="resrc scale" /></div>
		  </div>
	  	</div>
	  	
	    <div class="hero_image">
	      <div class="background">
      		<div class="image_container fade_on_load"><img data-src="http://app.resrc.it/O=80/http://assets.trailburning.com/images/ambassadors/ambassador3.jpg" class="resrc scale" /></div>
		  </div>
	  	</div>
	
	    <div class="hero_image">
	      <div class="background">
      		<div class="image_container fade_on_load"><img data-src="http://app.resrc.it/O=80/http://assets.trailburning.com/images/ambassadors/ambassador1.jpg" class="resrc scale" /></div>
	      </div>
	  	</div>
  	</div>

    <div class="event_title">
      <h1 class="tb tb-title">I'm #Trailburning</h1>
      <br/>
      <h1 class="tb tb-title">Ambassadors</h1>
    </div>      
  </div>    
    
  <div class="panel_content">
  	<div class="panel_ambassadors clearfix">
  		
        {% for user in ambassadors %}
            <div class="ambassador clearfix">  			
    			<div class="avatar">
    				<div class="tb-avatar tb-avatar-feature"><div class="photo"><a href="{{ path('profile', {name: user.name}) }}"><img src="{{ get_user_avatar_url(user) }}"></a></div></div>
    			</div>  			
      			<div class="ambassador-profile">  			
      				<div class="quote">
      					<p class="fancy"><span>"{{ user.ambassadorTagline }}"</span></p>  					
      				</div>
      				<div class="ambassador-content">
    					<div class="trailcards trail_card_sticker">      
                            {{ include('TBFrontendBundle:Trail:_trailcardSticker.html.twig', {'trail': user.routes[0]}) }}
    	  				</div>
    	  				<div class="details">
    	  					<h3 class="tb">{{ user.title }}</h3>
    	  					<div class="home">
    	  				  		<div class="location"></div>
    	  				  		{{ user.ambassadorLocation|raw }}
    	  					</div>	  				
    						{{ user.about }}
    						<div class="profile_btn"><a href="{{ path('profile', {name: user.name}) }}" class="btn btn-tb">{{ user.firstName }}'s Profile</a></div>					
    	  				</div>
    	  			</div>
      			</div>
      		</div>     
        {% endfor %}     
		
	</div>                
  </div>
  
  <div class="promo_content">      
    <div class="line_break"></div>
    <div class="content clearfix">      
    	
  		<div class="ambassador clearfix">  			
			<div class="avatar">
				<div class="tb-avatar tb-avatar-feature"><div class="photo"><img src="http://assets.trailburning.com/images/icons/avatars/avatar_man.jpg"></div></div>
			</div>  			
  			<div class="ambassador-profile">  			
  				<div class="quote">
  					<p class="fancy"><span>"What makes you run?"</span></p>  					
  				</div>
  				<div class="ambassador-content">
					<div class="trailcards trail_card_sticker">      
				   	    <div class="panel trail_card_panel">
					      <div class="title"><h3 class="tb">New Trail</h3></div>
						  {% if app.user %}  	      
				            <a href="{{ path('profile', {'name': app.user.name}) }}">
		    	  		  {% else %}
				            <a href="{{ app.request.baseUrl }}/register">
		    	  		  {% endif %}
				          <div class="photo tb-photo-btn">
				            <div class="image_container fade_on_load"><img src="{{ asset('assets/img/editor/create.jpg') }}" class="scale" border="0"/></div>
					        <div class="card_title">
							  <h1>Ready to share</h1>
							  <br/>
							  <h1>your adventures?</h1>
					        </div>
				          </div>
				          </a>
					      <div class="summary">					      	
								<div class="length">-- km</div>
								<div class="altitude">
								--- m D+
								<br/> 
							    --- m D-
								</div>					      	
					      </div>
				        </div>
					 </div>		
	  				<div class="details">
	  					<h3 class="tb">Become our next Ambassador!</h3>
	  					<div class="home"></div>
	  					<p>	  				
	  					Are you evangelical about the trails you love?  Do you fancy a quality <a href="http://www.craft.se" onClick="trackOutboundLink(this, 'Outbound Links', 'craft.se'); return false;">Craft</a> Trailburning running shirt?
	  					</p>
	  					<p>
						Then you may want to consider joining our ambassador programme!
	  					</p>
	  					<p>
	  					 We're looking for trail runners to represent their local region.
	  					</p> 
						<div class="profile_btn"><a href="mailto:hello@trailburning.com" class="btn btn-tb-action">Apply Now</a></div>					
	  				</div>
	  			</div>
  			</div>
  		</div>          
		 					 	
    </div>                  
  </div>
    	
{% endblock %}

{% block javascripts %}

{% endblock %}