{% extends "::base.html.twig" %}

{% block title %}{{ campaign.displayTitle }}{% endblock %}

{% block description %}
{{ campaign.synopsis }}
{% endblock %}



{% block og_image %}

{% endblock %}

{% block stylesheets %}
<link href="{{ asset('assets/css/campaign.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block body %}
<script>
var TB_APP = 'CampaignApp';
{% if app.user %}		
var TB_USER_ID = {{ app.user.id }};
{% endif %}
</script>

<div id="content_view">	
    <div id="campaignplayer">
        <div id="trail_views">        
            <div id="trail_map_view"></div>
            <div id="trail_slides_view"></div>
        </div>
        
        <div id="campaign_landing_overlay_view">        	
        	<div class="back tb-move-horiz"></div>        	
			<div class="info-hero tb-move-horiz">				  						  				
			  <div class="campaign_title tb-move-horiz"><img src="http://assets.trailburning.com/{{ campaign.logo }}" /></div>              
              <div class="campaign_play">
              	<div class="campaign_btn"></div>
              	Discover Trails	
			  </div>              	
			</div>        	
		</div>        	

        <div id="campaign_map_overlay_view">
        	<div class="back tb-move-horiz"></div>        	
			<div class="info-hero tb-move-horiz">				  						  				
			  <div class="campaign_title tb-move-horiz"><img src="http://assets.trailburning.com/{{ campaign.logo }}" /></div>              
              <div class="campaign_card">
				
				<img src="{{ asset('assets/img') }}/temp_campaign.jpg" />
				
			  </div>              	
			</div>        	
		</div>        	
        
        <div id="tb-loader-overlay">
  	  	  <div class="back"></div>
  	  	  <div class="tb-loader"><div class="spinner"></div><div class="middle">...</div></div>
  	  	</div>        
        
        <div id="view_map_btns">        
            <div class='controls'>
                <span class="btn btn-tb zoomin_btn">+</span>          
                <span class="btn btn-tb zoomout_btn">-</span>
                <span class="btn btn-tb view_btn">Satellite</span>          
            </div>    
        </div>
        
		<div id="view_player_btns" class="tb-move-vert">
          	<div class="close_btn"></div>	
        </div>            
    </div>
  
    <div class="panel_container">       
        <div class="panel_content_container">       
            <div class="panel_content">       
                <div id="bigbar">
		        {{ include('TBFrontendBundle:Default:breadcrumb.html.twig', breadcrumb) }}
				<div class="crumbs">
				    <div class="crumb_links">
			            <a href="">Urban Trails</a>
				    </div>
		    	</div>        
		        {{ include('TBFrontendBundle:Default:share.html.twig') }}
                </div>

                <div class="panels clearfix">     
			        <div class="left">        
			            <div class="panel campaign_detail_panel">
			                <div class="content">
			                    <h3 class="tb title">About {{ campaign.title }}</h3>
                                
                	  			<h4 class="tb">	 
                                    {{ campaign.synopsis|nl2br }}
                				</h4>
                                <p>{{ campaign.text|raw }}</p>
			                    <div class="join"><a href="" onClick="" class="btn btn-tb-action btn-tb-large">Visit {{ campaign.title }}</a></div>
			                </div>
			            </div>
			            
                        <div id="trail_weather_view" class="panel trail_weather_panel"></div>			            
			        </div>
			      
			        <div class="right">
			        	
			    		<div class="trails_title">
			    		<h2 class="tb tb-title first-title ">{{ campaign.title }} Trails</h2>
			    		</div>
						                        
                        {% if campaign.routes and campaign.routes|length > 0 %}
			        	
                        <div class="event_container trailcards">

                    	    {% for trail in campaign.routes %}
                    	        {{ include('TBFrontendBundle:Trail:_trailcard.html.twig', {'trail': trail}) }}
                    	    {% endfor %}
						</div>
                        
                        {% endif %}
			        	
			        </div>  
                </div>                                
            </div>
        </div>
    </div>  
</div>  

{% endblock %}


{% block javascripts %}

<script type="text/template" id="trailSlidesViewTemplate">
  <div class="photos_container"></div>
  <div class="slide_btns">
    <div class="left">
      <div class="hot"></div>
      <div class="arrow"></div>
    </div>
    <div class="right">
      <div class="hot">
        <div class="arrow"></div>
      </div>    	
    </div>
  </div>  
  <div class="loader_container">
    <div class="loader"></div>
  </div>  
</script>

<script type="text/template" id="trailSlideViewTemplate">
  <div class="background">
    <div class="image_container fade_on_load"><img src="http://app.resrc.it/O=80/http://assets.trailburning.com<%= versionLargePath%>" class="resrc scale" /></div>
  </div>
</script>

<script type="text/template" id="trailMapViewTemplate">
  <div class="map_container">
    <div id='map_large'></div>
  </div>
</script>

<script type="text/template" id="trailWeatherViewTemplate">
  <div class="content">
    <h3 class="tb">Today&#39;s weather</h3>
    <div class="desc"></div>
    <div class="detail clearfix">                  
      <div class="text">
        <div class="temp"></div>
        <div class="wind"></div>
      </div>
      <div class="icon"></div>
    </div>
  </div>
</script>

{% endblock %}
