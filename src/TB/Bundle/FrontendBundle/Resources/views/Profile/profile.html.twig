{% extends '::base.html.twig' %}

{% block stylesheets %}

<link href="{{ asset('assets/css/profile.css') }}" rel="stylesheet" type="text/css">

{% endblock %}

{% block body %}

<script>
var TB_APP = 'ProfileApp';
var TB_PROFILE_LONG = {{ user.long }};
var TB_PROFILE_LAT = {{ user.lat }};
</script>

<div id="profile_header">
	<div id='profile_map_view'></div>  
	<div class="profile_title">
	    <h1 class="tb tb-title">{{ user.firstName }}</h1>
	    <br/>
        <h1 class="tb tb-title">{{ user.lastName }}</h1>      
        <div class='avatar'><img src="{{ asset('assets/img/avatars/' ~ user.avatar) }}" /></div>
	</div>
</div>		

<div class="panel_content">
	<div id="bigbar">
		<div class="crumbs">
			<div class="crumb_lead"><a href="{{ app.request.baseUrl }}/">Home</a></div>
			<div class="crumb_links"><a href="{{ path('profile', {name: user.name}) }}">{{ user.firstName }} {{ user.lastName }}</a></div>
		</div>
        <div class="share">
            <div class="link facebook"><a href="http://www.facebook.com/share.php?u={{ url('profile', {name: user.name}) }}" target="_blank" class="button btnFacebook">Facebook</a></div>
            <div class="link twitter"><a href="http://twitter.com/share?text=Are you trailburning?" target="_blank" class="button btnTwitter">Twitter</a></div>
            <div class="link googleplus"><a href="https://plus.google.com/share?url={{ url('profile', {name: user.name}) }}" target="_blank" class="button btnGooglePlus">Google+</a></div>          
        </div>
    </div>
                        
    <div class="panels clearfix">           
		<div class="left">        
			<div class="panel profile_detail_panel">
				<div class="content">
					<div class="title">About Me</div>
		            <h1>{{ user.synopsis }}</h1>
		            <p>{{ user.about }}</p>
					<!--            
					<div class="join"><a href="" target="_blank" class="btn btn-tb-action btn-tb-large">Follow me</a></div>
					-->            
				</div>
			</div>
			<div class="panel trailgear_panel">
				<div class="content">
					<div class="title">My favourite gear</div>
						<div class="gear_list">
							<div class="gear">
								<div class="photo"><img src="https://s3-eu-west-1.amazonaws.com/trailburning-assets/images/brands/salomon/Speedcross3.jpg" /></div>
								<h1>Speedcross 3</h1>
								<h2>Salomon</h2>
							</div>
							<div class="gear">
								<div class="photo"><img src="https://s3-eu-west-1.amazonaws.com/trailburning-assets/images/brands/ashmei/sweatshirt.jpg" /></div>
								<h1>Merino Sweatshirt</h1>
								<h2>Ashmei</h2>
							</div>
							<div class="gear">
								<div class="photo"><img src="https://s3-eu-west-1.amazonaws.com/trailburning-assets/images/brands/nathan/VaporShape.jpg" /></div>
								<h1>VaporShape</h1>
								<h2>Nathan</h2>
							</div>            
						</div>            
					</div>
				</div>                              
			</div>
		
			<div class="panel tops_trails_panel">
				<div class="title">My Top Trails</div>
				{% for route in routes %}
				    <div class="top_trail">
                        <a href="{{ path('trail', {'slug': route.slug}) }}">{{ route.name }}
							<div class="tb-photo-btn">
								<div class="image_container"><img src="http://app.resrc.it/O=80/http://s3-eu-west-1.amazonaws.com/{{ route.media.versions[0].path }}" class="resrc scale" border="0"/></div>
								<div class="trail_title">
									<h1 class="title_shadow">{{ route.name}}</h1>
									<br/>
									<h1 class="title_shadow">{{ route.region }}</h1>
								</div>
							</div>
						</a>
					</div>
				{% endfor %}
				</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}

{% block javascripts %}

<script type="text/template" id="profileMapViewTemplate">
	<div id='profile_map'></div>
	<div id='profile_map_overlay'></div>
</script>

{% endblock %}