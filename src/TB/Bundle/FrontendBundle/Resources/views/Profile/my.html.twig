{% extends '::base.html.twig' %}

{% block title %}My Profile{% endblock %}

{% block stylesheets %}
<link href="{{ asset('assets/css/common_cards.css') }}" rel="stylesheet" type="text/css">
<link href="{{ asset('assets/css/user.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block body %}
<script>
var TB_APP = 'UserApp';
{% if app.user %}		
var TB_USER_ID = {{ app.user.id }};
{% endif %}
{% if user.location %}
var TB_USER_LONG = {{ user.location.longitude }};
var TB_USER_LAT = {{ user.location.latitude }};
{% endif %}
</script>

{{ include('TBFrontendBundle:Profile:_userHeader.html.twig', [user]) }}	

<div class="panel_content">
	<div class="crumb_content fixed_content">
	  <div id="bigbar">
        {{ include('TBFrontendBundle:Default:breadcrumb.html.twig', breadcrumb) }}
        
        {{ include('TBFrontendBundle:Default:share.html.twig') }}

		{% if app.user %}
			{% if app.user.id != user.id %}
				<div class="follow"><a href="javascript:void(0)" class="btn btn-tb-action btn-tb like_btn{% if user_is_following(app.user, user) %} pressed-btn-tb{% endif %}" data-off="Follow" data-on="Following" data-firstname="{{ user.firstname}}" data-userid="{{ user.id}}"><i class="icon-star icon-white"></i> <span class="btn-label">{% if user_is_following(app.user, user) %}Following{% else %}Follow{% endif %} {{ user.firstname}}</span></a></div>
			{% endif %}
		{% else %}
			<div class="follow"><a href="{{ path('fos_user_security_login') }}" class="btn btn-tb-action btn-tb like_btn" data-off="Follow" data-on="Following" data-firstname="{{ user.firstname}}" data-userid="{{ user.id}}"><i class="icon-star icon-white"></i> <span class="btn-label">Follow {{ user.firstname}}</span></a></div>
		{% endif %}
      </div>
    </div>
                        
    <div class="panels clearfix">           
    	<div class="mytrails_title_content fixed_content">    		
      	  <h2 class="tb tb-title">My Trails</h2>
    	</div>

    	<div class="mytrails_content fixed_content">    	
	  	  <div class="panels clearfix">
	  	  	
	   	    <div class="panel trail_card trail_card_panel">
		      <div class="title"><h3 class="tb">New Trail</h3></div>
	          <a href="{{ path('trailmaker') }}">
	          <div class="photo tb-photo-btn">
	            <div class="image_container fade_on_load"><img src="{{ asset('assets/img/editor/create.jpg') }}" class="scale" border="0"/></div>
		        <div class="card_title">
				  <h1>Ready to share</h1>
				  <br/>
				  <h1>your trail?</h1>
		        </div>
	          </div>
	          </a>
		      <div class="summary">
		        <div class="cntrls"><a class="btn btn-tb-action" href="{{ path('trailmaker') }}">Create Trail</a></div>
		      </div>
	        </div>
	  	  	
          {% if unpublishedRoutes %}
			  {% for route in unpublishedRoutes %}
	   	      <div class="panel trail_card trail_card_panel" data-id="{{ route.id }}" data-name="{{ route.name }}">
		        <div class="title"><h3 class="tb">{% if route.category is defined %}{{ route.category.name}}{% endif %}</h3></div>
                {% if route.slug %}
                    <a href="{{ path('trail', {'trailSlug': route.slug}) }}">
                {% endif %}
	            <div class="photo tb-photo-btn">
                  <div class="image_container fade_on_load">
                  {% if route.media is defined %}
                    <img src="http://app.resrc.it/O=80/http://s3-eu-west-1.amazonaws.com/{{ route.media.versions[0].path }}" class="resrc scale" border="0"/>
                  {% else %}
                     <img src="http://app.resrc.it/s=w260,pd1/o=80/http://s3-eu-west-1.amazonaws.com/trailburning-assets/images/default/example_trailcard.jpg" class="resrc scale" border="0"/>
                  {% endif %}
                  </div>
		          <div class="card_title">
					<h1>{{ route.name}}</h1>
					<br/>
					<h1>{{ route.region }}</h1>
		          </div>
	            </div>
	            <div class="draft"></div>
	          	</a>
		      	<div class="summary">
		      	  <div class="cntrls"><a class="btn btn-tb" href="{{ path('trailmaker', {id: route.id}) }}">Edit Trail</a><a href="javascript:void(0)" class="btnDeleteTrail button">Delete</a></div>
		        </div>
	          </div>
			  {% endfor %}
		  {% endif %}
    			
          {% if publishedRoutes %}
			  {% for route in publishedRoutes %}
	   	      <div class="panel trail_card trail_card_panel" data-id="{{ route.id }}" data-name="{{ route.name }}">
		        <div class="title"><h3 class="tb">{{ route.category.name}}</h3></div>
	            <a href="{{ path('trail', {'trailSlug': route.slug}) }}">
	            <div class="photo tb-photo-btn">
                    <div class="image_container fade_on_load">
                    {% if route.media is defined %}
                      <img src="http://app.resrc.it/O=80/http://s3-eu-west-1.amazonaws.com/{{ route.media.versions[0].path }}" class="resrc scale" border="0"/>
                    {% else %}
                       <img src="http://app.resrc.it/s=w260,pd1/o=80/http://s3-eu-west-1.amazonaws.com/trailburning-assets/images/default/example_trailcard.jpg" class="resrc scale" border="0"/>
                    {% endif %}
                    </div> 
		          <div class="card_title">
					<h1>{{ route.name}}</h1>
					<br/>
					<h1>{{ route.region }}</h1>
		          </div>
	            </div>
	          	</a>
		      	<div class="summary">
		      	  <div class="cntrls"><a class="btn btn-tb" href="{{ path('trailmaker', {id: route.id}) }}">Edit Trail</a><a href="javascript:void(0)" class="btnDeleteTrail button">Delete</a></div>
		        </div>
	          </div>
			  {% endfor %}
		  {% endif %}
	      </div>	      
		</div>
		  		  
    	<div class="details_content fixed_content clearfix">
			<div class="panel profile_detail_panel">
			  <div class="content">
				<div class="title">About Me</div>
		        <h1>{{ user.synopsis }}</h1>
			  </div>
			</div>
    	
            {{ include('TBFrontendBundle:Profile:_follow.html.twig', [user]) }}
            
    	</div>

    	<div class="likedtrails_content">
  		  <div class="fixed_content">

	    {% if user.id == 2 %}
      		<h2 class="tb">Trails I Like</h2>
      		<div class="desc"><h4 class="tb">Discover my favourite Trails from the Trailburning Community</h4></div>      
		  	<div class="panels">  	
			  <div class="trail_card_sticker">
				<div class="panel trail_card trail_card_panel">
				  <div class="title"><h3 class="tb">Mountains</h3></div>
			      <a href="../trail/chamonix">
			      <div class="photo tb-photo-btn">
			        <div class="image_container fade_on_load"><img src="http://app.resrc.it/o=80/http://s3-eu-west-1.amazonaws.com/trailburning-media/351f5fcad0817a6a2315ec7daaddbf6097c3c54e.jpg" class="resrc scale" border="0"/></div>
			        <div class="card_title">
			        <h1>Alpine Adventure</h1>
			        <br />
			        <h1>Chamonix</h1>
			        </div>
			      </div>
			      </a>
			      <div class="summary">
	  	    		<div class="tb-avatar"><div class="photo"><a href="../profile/reubentabner"><img src="https://s3-eu-west-1.amazonaws.com/trailburning-assets/images/profile/reubentabner/avatar.jpg"></a></div></div>
				    <div class="detail">
				    by <strong>Reuben Tabner</strong>
				    <div class="stars">
				      <div class="star_full"></div>
				      <div class="star_full"></div>
				      <div class="star_full"></div>
				      <div class="star_half"></div>
				      <div class="star"></div>
				    </div>
				    </div>
			      </div> 
			 	</div>						 	
			  </div><!--  	
		   --><div class="trail_card_sticker">
				  <div class="panel trail_card trail_card_panel">
			        <div class="title"><h3 class="tb">Bush</h3></div>
			        <a href="../trail/yurrebilla">
			        <div class="photo tb-photo-btn">
			          <div class="image_container fade_on_load"><img src="http://app.resrc.it/o=80/http://s3-eu-west-1.amazonaws.com/trailburning-media/72f5660f673dd97f92ed8c2b7ab1d4fc998632e5.jpg" class="resrc scale" border="0"/></div>
			          <div class="card_title">
			            <h1>Yurrebilla</h1>
			            <br/>
			            <h1>South Australia</h1>
			          </div>
			        </div>
			        </a>
			        <div class="summary">
			          <div class="tb-avatar"><div class="photo"><a href="../profile/paultran"><img src="https://s3-eu-west-1.amazonaws.com/trailburning-assets/images/profile/paultran/avatar.jpg"></a></div></div>
			          <div class="detail">
			            by <strong>Paul Tran</strong>
			            <div class="stars">
			              <div class="star_full"></div>
			              <div class="star_full"></div>
			              <div class="star_full"></div>
			              <div class="star_full"></div>
			              <div class="star"></div>
			            </div>
			          </div>
			        </div>
			      </div>
			  </div><!--
		   --><div class="trail_card_sticker">
			   	  <div class="panel trail_card trail_card_panel">
			        <div class="title"><h3 class="tb">Park</h3></div>
			        <a href="../trail/volkspark">
			        <div class="photo tb-photo-btn">
			          <div class="image_container fade_on_load"><img src="http://app.resrc.it/O=80/http://s3-eu-west-1.amazonaws.com/trailburning-media/367ebcf2a55a711e258a909c9606cdf8f172fb69.jpg" class="resrc scale" border="0"/></div>
			          <div class="card_title">
			            <h1>Volkspark</h1>
			            <br/>
			            <h1>Friedrichshain</h1>
			            <br/>
			            <h1>Berlin</h1>
			          </div>
			        </div>
			        </a>
			        <div class="summary">
			          <div class="tb-avatar"><div class="photo"><a href="../profile/mattallbeury"><img src="https://s3-eu-west-1.amazonaws.com/trailburning-assets/images/profile/mattallbeury/avatar.jpg"></a></div></div>
			          <div class="detail">
			            by <strong>Matt Allbeury</strong>
			            <div class="stars">
			              <div class="star_full"></div>
			              <div class="star_full"></div>
			              <div class="star_full"></div>
			              <div class="star_half"></div>
			              <div class="star"></div>
			            </div>
			          </div>
			        </div>
			      </div>        
			  </div>	   	
		  	</div>
		{% else %}    	
      		<h2 class="tb">Trails I Like</h2>
      		<div class="desc"><h4 class="tb">Discover my favourite Trails from the Trailburning Community</h4></div>      
		  	<div class="panels">  	
			  <div class="trail_card_sticker">
				<div class="panel trail_card trail_card_panel">
				  <div class="title"><h3 class="tb">I'm a Trail</h3></div>
			      <div class="photo tb-photo-btn">
			        <div class="image_container fade_on_load"><img src="{{ asset('assets/img/example_trailcard.jpg') }}" class="scale" border="0"/></div>
			      </div>
			      <div class="summary">
	  	    		<div class="tb-avatar"><div class="photo"><img src="{{ asset('assets/img/avatar_man.jpg') }}"></div></div>
				    <div class="detail">
				    by <strong>#Trailburning</strong>
				    <div class="stars">
				      <div class="star_full"></div>
				      <div class="star_full"></div>
				      <div class="star_full"></div>
				      <div class="star_full"></div>
				      <div class="star_full"></div>
				    </div>
				    </div>
			      </div> 
			 	</div>						 	
			  </div>
			</div>
      		<div class="discover"><a href="{{ app.request.baseUrl }}/about" class="btn btn-tb btn-tb-mega">Discover Trails</a></div>                        
		{% endif %}    	
		  </div>    		
    	</div>
	</div>
</div>

<div id='tb-content-overlay'></div>	
<div id='tb-overlay-view'></div>    

{% endblock %}

{% block javascripts %}

<script type="text/template" id="profileMapViewTemplate">
	<div id='profile_map'></div>
	<div id='profile_map_overlay'></div>
</script>

<script type="text/template" id="overlayViewTemplate">
  <div id="overlayContent_view"></div>
</script>

<script type="text/template" id="trailmakerDeleteTrailViewTemplate">
    <div class="panel_content">
        <div class="panel">
            <div class="content">      
                <h1 class="tb">Remove</h1>
                <div class="confirm_action">
	                <div class="desc">
	                    <h4 class="tb">
	                        Are you sure you wish to remove the trail: <strong><%= trail_name %></strong>?
	                        <br /><br />
	                        This action <strong>cannot</strong> be undone.
	                    </h4>
	                </div> 
	                <div class="next_step"><a href="javascript:void(0)" class="btn btn-tb-action btn-tb-large proceed">Yes</a><a href="javascript:void(0)" class="btn btn-tb-action btn-tb-large cancel">No</a></div>
                </div>
                <div class="action_confirmed">
	                <div class="desc">
	                    <h4 class="tb">
	                        Your trail has been removed!
	                        <br /><br />
	                        If you have any questions please contact Trailburning <a href="mailto:support@trailburning.com">support</a>.
	                    </h4>
	                </div> 
	                <div class="next_step"><a href="javascript:void(0)" class="btn btn-tb-action btn-tb-large complete">Return to profile</a></div>
                </div>
            </div>
        </div>
		<div class="step_marker_container">
			<div class="tb-step-marker tb-step"><div class="photo"><img src="{{ asset('assets/img/steps') }}/step_publish.jpg"></div></div>
		</div>	                
    </div>    
</script>

{% endblock %}